{
    "manifest_version": 3,
    "name": "YouTube Quick Dismiss",
    "version": "1.0",
    "description": "Quickly dismiss YouTube videos with one click",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }]
  }